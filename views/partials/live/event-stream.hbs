<section class="section">
  <div class="container">
    <h1 class="title">Event Stream</h1>

    <div class="content">
      <p>Stream recent changes to the English Wikipedia via the
        <a href="https://www.mediawiki.org/wiki/API:Recent_changes_stream">Recent Changes API</a>.
      </p>
    </div>

    <div class="buttons">
      {{#if streaming}}
        {{!-- TODO: Implement data-live-key --}}
        <button class="button" data-live-click="stopStreaming">
          Stop Streaming
        </button>
      {{else}}
        <button class="button is-primary" data-live-click="startStreaming">
          Start Streaming
        </button>
      {{/if}}
    </div>

    <div class="content">
      <ul>
        {{#each messages}}
          <li>
            Change by <b>{{user}}</b>{{#if parsedcomment}}:&nbsp;{{{parsedcomment}}}{{/if}}
          </li>
        {{/each}}
      </ul>
    </div>
  </div>
</section>
